<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ReservaRefeicao.Views.Templates.RefeicaoTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:ReservaRefeicao.Model">

    <Border
        x:DataType="m:Refeicao"
        HeightRequest="154"
        Stroke="Transparent"
        WidthRequest="150">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="40" />
        </Border.StrokeShape>

        <Grid
            Margin="15"
            ColumnDefinitions="*"
            RowDefinitions="*">

            <StackLayout
                HorizontalOptions="Start"
                Spacing="0"
                VerticalOptions="End">

                <Image
                    Aspect="AspectFit"
                    HeightRequest="50"
                    Source="dotnet_bot.png" />

                <Label Text="{Binding Tipo}" class="LargeTitle" />
                <Label Text="{Binding Cardapio}" class="SubContent" />

                <Button
                    HorizontalOptions="Fill"
                    Text="Reservar" />
            </StackLayout>
        </Grid>
    </Border>
</ContentView>
